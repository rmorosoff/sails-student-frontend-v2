<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Student-Class Relationships</h2>
<button class="btn btn-success" id="addStudentClassButton">Add Student-Class</button>
<table class="table table-striped table-bordered" id="studentclassTable" style="width:100%">
  <thead>
    <tr>
      <th>Student-Class ID</th>
      <th>Student ID</th>
      <th>Class ID</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof studentclasses != "undefined" && studentclasses.length > 0){ %>
    <% studentclasses.forEach(function(studentclass){ %>
      <tr>
        <td><%= studentclass.student_class_id %></td>
        <td><%= studentclass.student_id %></td>
        <td><%= studentclass.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-studentclassid="<%= studentclass.student_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-studentclassid="<%= studentclass.student_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_studentclass" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="student_class_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageStudentClassForm">
  <input type="hidden" name="student_class_id">
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id"  placeholder="Student ID?" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id" placeholder="Class ID?">
    </div>
  </div>
</form>
