<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Majors</h2>
<button class="btn btn-success" id="addMajorButton">Add Major</button>
<table class="table table-striped table-bordered" id="majorTable" style="width:100%">
  <thead>
    <tr>
      <th>Major ID</th>
      <th>Major</th>
      <th>SAT</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof majors != "undefined" && majors.length > 0){ %>
    <% majors.forEach(function(major){ %>
      <tr>
        <td><%= major.major_id %></td>
        <td><%= major.major %></td>
        <td><%= major.sat %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-majorid="<%= major.major_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-majorid="<%= major.major_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="major_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageMajorForm">
  <input type="hidden" name="major_id">
  <div class="form-group">
    <label for="major" class="col-sm-2 control-label">Major</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="major" name="major" placeholder="Major?" required>
    </div>
  </div>
  <div class="form-group">
    <label for="sat" class="col-sm-2 control-label">Minimum SAT score</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="sat" name="sat"  placeholder="SAT score?" required>
    </div>
  </div>
</form>
