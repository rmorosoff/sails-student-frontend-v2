<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Major-Class Relationships</h2>
<button class="btn btn-success" id="addMajorClassButton">Add Major-Class</button>
<table class="table table-striped table-bordered" id="majorclassTable" style="width:100%">
  <thead>
    <tr>
      <th>Major-Class ID</th>
      <th>Major ID</th>
      <th>Class ID</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof majorclasses != "undefined" && majorclasses.length > 0){ %>
    <% majorclasses.forEach(function(majorclass){ %>
      <tr>
        <td><%= majorclass.major_class_id %></td>
        <td><%= majorclass.major_id %></td>
        <td><%= majorclass.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-majorclassid="<%= majorclass.major_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-majorclassid="<%= majorclass.major_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_majorclass" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="major_class_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageMajorClassForm">
  <input type="hidden" name="major_class_id">
  <div class="form-group">
    <label for="major_id" class="col-sm-2 control-label">Major ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="major_id" name="major_id"  placeholder="Major ID?" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id" placeholder="Class ID?">
    </div>
  </div>
</form>
